<h1>注册</h1>

<div class="row">
  <div class="span6 offset3">
    <%=form_for(@user) do|f| %>
        <%=render'shared/error_messages',object:f.object%>
        <%=f.label :"姓名"%>
        <%=f.text_field :name%>

        <%=f.label :"邮箱"%>
        <%=f.text_field :email%>
        <%=f.label :"单位"%>
        <%=f.text_field :department%>

        <%=f.label :"班组"%>
        <%=f.text_field :group%>

        <%=f.label :"密码"%>
        <%=f.password_field :password%>

        <%=f.label :"密码确认"%>
        <%=f.password_field :password_confirmation %>

        <%=f.submit"提交",class:"btn btn-large btn-primary"%>
    <%end%>
  </div>
</div>
